{
    "name": "starter-club-monorepo",
    "private": true,
    "workspaces": [
        "apps/*"
    ],
    "scripts": {
        "dev:marketing": "npm run dev --workspace=@starter-club/marketing-website",
        "build:marketing": "npm run build --workspace=@starter-club/marketing-website",
        "dev:onboard": "npm run dev --workspace=@starter-club/onboard-app",
        "build:onboard": "npm run build --workspace=@starter-club/onboard-app",
        "dev:flight-deck": "npm run dev --workspace=@starter-club/flight-deck",
        "build:flight-deck": "npm run build --workspace=@starter-club/flight-deck",
        "dev": "concurrently \"npm run dev:marketing\" \"npm run dev:onboard\" \"npm run dev:flight-deck\" --names \"MARKETING,ONBOARD,FLIGHT\" --prefix-colors \"blue,green,magenta\"",
        "build": "concurrently \"npm run build:marketing\" \"npm run build:onboard\" \"npm run build:flight-deck\""
    },
    "devDependencies": {
        "concurrently": "^9.2.1"
    },
    "dependencies": {
        "react": "19.2.1",
        "react-dom": "19.2.1"
    }
}
